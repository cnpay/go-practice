        {
            "name": "Launch go file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "env": {},
            "args": []
        },
        {
            "name": "Launch test function",
            "type": "go",
            "showLog": true,
            "trace": "log",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "args": [
                "-test.v",
            ]
        }
    ]
}